// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ValidationCode {
  id           Int        @id @default(autoincrement())
  hash         String     @unique
  expiredate   DateTime
  used         Boolean    @default(false)
  eventOwnerId Int        @unique
  EventOwner   EventOwner @relation(fields: [eventOwnerId], references: [id])

  @@map("validation_code")
}

model EventOwner {
  id        Int      @id @default(autoincrement())
  name      String
  pseudonym String
  email     String   @unique
  phone     Int
  cpfCpnj   String   @unique
  password  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)

  event          Event[]
  validationCode ValidationCode?

  @@map("event_owner")
}

model Event {
  id            Int      @id @default(autoincrement())
  eventOwnerId  Int
  title         String
  description   String
  ticketLimit   Int
  eventDateHour DateTime
  state         String
  city          String
  address       String
  number        Int
  published     Boolean
  createdAt     DateTime @default(now()) @db.Timestamp(0)
  updatedAt     DateTime @default(now()) @updatedAt @db.Timestamp(0)

  owner EventOwner @relation(fields: [eventOwnerId], references: [id])

  @@map("event")
}
